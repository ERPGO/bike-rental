<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="bike_rental.request.list">
      <field name="name">Bike rental request list</field>
      <field name="model">bike_rental.request</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="partner_id"/>
        </tree>
      </field>
    </record>

    <!-- FORM view of REQUESTS -->
    <record model="ir.ui.view" id="bike_rental.request.form">
      <field name="name">Bike rental request form</field>
      <field name="model">bike_rental.request</field>
      <field name="arch" type="xml">
        <form>
          <field name="name"/>
          <field name="partner_id"/>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="bike_rental.action_window.request">
      <field name="name">bike_rental request</field>
      <field name="res_model">bike_rental.request</field>
      <field name="view_mode">tree,form</field>
    </record>


